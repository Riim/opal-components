h1 { 'OpalSelect + OpalLoadedList' }
p {
	OpalSelect {
		OpalDropdown (class=OpalSelect__menu, autoHeight=no, closeOn=mousedown) {
			OpalFilteredList (class=OpalSelect__filteredList) {
				OpalLoadedList (
					class=OpalSelect__loadedList OpalFilteredList__list,
					dataProvider={dataProvider1}
				) {
					OpalSelectOption (class=OpalLoadedList__listItem, text={$item.name})
				}
			}
		}
	}
	' '

	OpalSelect {
		OpalPopover (class=OpalSelect__menu, position=bottom, closeOn=mousedown) {
			OpalLoadedList (class=OpalSelect__loadedList, dataProvider={dataProvider1}) {
				OpalSelectOption (class=OpalLoadedList__listItem, text={$item.name})
			}
		}
	}
	' '

	OpalSelect (
		multiple,
		dataListItemSchema='{ value: "id", text: "name", subtext: "parent" }',
		viewModel={viewModel1},
		viewModelItemSchema='{ value: "id", text: "name", subtext: "parent" }'
	) {
		OpalPopover (class=OpalSelect__menu, position=bottom, closeOn=mousedown) {
			OpalLoadedList (class=OpalSelect__loadedList, dataProvider={dataProvider1}) {
				OpalSelectOption (
					class=OpalLoadedList__listItem,
					value={$item.id},
					text={$item.name},
					subtext={$item.parent},
					disabled={$item.disabled}
				)
			}
		}
	}
	' '

	OpalSelect {
		OpalPopover (class=OpalSelect__menu, position=bottom, closeOn=mousedown) {
			OpalFilteredList (class=OpalSelect__filteredList) {
				OpalLoadedList (
					class=OpalSelect__loadedList OpalFilteredList__list,
					dataProvider={dataProvider1}
				) {
					OpalSelectOption (class=OpalLoadedList__listItem, text={$item.name})
				}
			}
		}
	}
	' '

	OpalSelect (multiple, addNewItem={addNewItem1}) {
		OpalPopover (class=OpalSelect__menu, position=bottom, closeOn=mousedown) {
			OpalFilteredList (class=OpalSelect__filteredList) {
				OpalLoadedList (
					class=OpalSelect__loadedList OpalFilteredList__list,
					dataProvider={dataProvider1}
				) {
					OpalSelectOption (class=OpalLoadedList__listItem, text={$item.name})

					span (class=OpalLoadedList__nothingFound) {
						span (class=OpalLoadedList__nothingFoundMessage) {
							'Ничего не найдено'
						}

						OpalButton (class=OpalSelect__btnAddNewItem, dataItemText={query}) {
							'Добавить "{query}"'
						}
					}
				}
			}
		}
	}
}

