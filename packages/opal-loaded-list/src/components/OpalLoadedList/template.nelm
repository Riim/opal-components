@section/inner {

div/list {
	@Repeat (for=$item of dataList) {
		RtSlot/listItemSlot (for=listItem, cloneContent, getContext={_getListItemContext}) {
			span/listItem {
				'{$item |key(_dataListItemTextFieldName) }'
			}
		}
	}
}

OpalLoader/loader (shown={isLoaderShown}, alignCenter={empty})

@IfThen (if=isNothingFoundShown) {
	RtSlot/nothingFoundSlot (for=nothingFound, getContext={_getListItemContext}) {
		span/nothingFound {
			span/nothingFoundMessage {
				'{constructor.i18n.nothingFound}'
			}
		}
	}
}

}