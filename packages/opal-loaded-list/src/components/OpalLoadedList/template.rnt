div:list {
	RnSlot:listItemSlot (
		@for=$item in dataList,
		for=listItem,
		cloneContent,
		getContext={_getListItemContext}
	) {
		span:listItem {
			'{$item |key(_dataListItemTextFieldName) }'
		}
	}
}

OpalLoader:loader (shown={loaderShown}, alignCenter={empty})

RnSlot:nothingFoundSlot (
	@if=nothingFoundShown,
	for=nothingFound,
	getContext={_getListItemContext}
) {
	span:nothingFound {
		span:nothingFoundMessage {
			'{"Ничего не найдено" |t }'
		}
	}
}