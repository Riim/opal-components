@IfThen (if=range) {
	div:firstInputWrapper3 {
		div:firstInputWrapper2 (style=width: {_firstInputWidth}%) {
			div:firstInputWrapper {
				input:firstInput (
					type=range,
					min={min},
					max={max},
					step={step},
					value={range.0}
				)
			}
		}
	}

	div:secondInputWrapper {
		input:secondInput (
			type=range,
			min={min},
			max={max},
			step={step},
			value={range.1}
		)
	}
}

input:input (
	@unless=range,
	type=range,
	min={min},
	max={max},
	step={step},
	value={value}
)