div/bar (
	viewType={paramViewType},
	hasIcon={paramIcon |notnot },
	iconSize={paramIconSize},
	buttonHide={paramButtonHide}
) {
	@IfThen (paramIcon) {
		OpalIcon/icon (name={paramIcon}, size={paramIconSize})
	}

	@Slot/contentSlot

	button/btnHide (hide={paramButtonHide |not }) {
		OpalIcon/btnHideIcon (name=cross)
	}
}