@section/inner {

@IfThen (paramMultiline) {
	textarea/, textField (
		rows={paramRows},
		name={paramInputName},
		placeholder={paramPlaceholder},
		tabIndex={paramTabIndex_},
		disabled={paramDisabled}
	)
}
@IfElse (paramMultiline) {
	input/, textField (
		type={paramInputType},
		name={paramInputName},
		placeholder={paramPlaceholder},
		tabIndex={paramTabIndex_},
		disabled={paramDisabled}
	)
}

@IfThen (paramStartIcon) {
	OpalIcon/startIcon (name={paramStartIcon})
}

RtSlot/endIconSlot (for=endIcon, shown={isEndIconShown}) {
	@IfThen (paramEndIcon) {
		OpalIcon/endIcon (name={paramEndIcon})
	}
}

@IfThen (paramClearable) {
	button/btnClear (shown={isBtnClearShown}) {
		OpalIcon/btnClearIcon (name=cross)
	}
}

@IfThen (paramLoading) {
	OpalLoader/loader (size=s, shown)
}

}