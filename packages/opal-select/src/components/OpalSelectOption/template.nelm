@section/inner {

button/control (tabIndex={_tabIndex}) {
	RtSlot/contentSlot {
		'{paramText}'

		@IfThen (paramSubtext) {
			sub {
				'{paramSubtext}'
			}
		}
	}

	@IfThen (selected) {
		OpalIcon/iconSelected (name=checkmark)
	}

	@IfThen (indeterminate) {
		OpalIcon/iconIndeterminate (name=minus)
	}
}

}