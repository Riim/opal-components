@section/inner {

RnSlot (for=button) {
	OpalButton/button (
		viewType={paramViewType},
		size={paramSize},
		checkable,
		tabIndex={paramTabIndex},
		disabled={paramDisabled}
	) {
		@IfThen (paramText) {
			'{paramText}'
		}
		@IfElse (paramText) {
			'{_buttonText}'
		}

		OpalIcon/buttonIcon (name=chevronBottom)
	}
}

RnSlot (for=menuSlot) {
	RnSlot/menuSlot (for=menu) {
		OpalDropdown/menu (closeOn=mousedown) {
			RnSlot (for=menuHeader)
			RnSlot (for=menuContent) {
				@IfThen (_paramDataListSpecified) {
					div/, menuContent {
						@IfThen (dataList) {
							@Repeat (for=item in dataList, trackBy={=_dataListItemValueFieldName}) {
								OpalSelectOption/option (
									value='{=item |key(_dataListItemValueFieldName) }',
									text='{=item |key(_dataListItemTextFieldName) }',
									subtext='{=item |key(_dataListItemSubtextFieldName) }',
									disabled='{=item |key(_dataListItemDisabledFieldName) }'
								)
							}

							RnSlot/newItemInputSlot // ...
						}
						@IfElse (dataList) {
							OpalLoader/menuLoader (shown)
						}
					}
				}
				@IfElse (_paramDataListSpecified) {
					div/, menuContent {
						RnSlot/options (forTag=opal-select-option)

						RnSlot (for=newItemInputSlot) {
							RnSlot/newItemInputSlot (for=newItemInput)
						}
					}
				}
			}
			RnSlot (for=menuFooter)
		}
	}
}

}