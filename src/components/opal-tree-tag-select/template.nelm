opal-tree-select/select (
	view-type={inputs.viewType},
	data-tree-list-keypath={_dataListKeypathParam},
	data-tree-list-item-schema={inputs.dataListItemSchema |json },
	value={inputs.value},
	view-model={viewModel},
	view-model-item-schema={inputs.viewModelItemSchema |json },
	add-new-item={inputs.addNewItem},
	focused={inputs.focused}
) {
	opal-sign-button/button (
		class=opal-select__button,
		sign=plus,
		checkable,
		tab-index={inputs.tabIndex},
		disabled={inputs.disabled}
	)
}