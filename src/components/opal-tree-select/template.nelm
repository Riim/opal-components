opal-modal/menu {
	opal-filtered-list {
		opal-tree-list (
			class=opal-filtered-list__loaded-list,
			datatreelist={dataTreeList},
			datatreelist-item-schema={input.datatreelistItemSchema},
			view-model={viewModel},
			view-model-item-schema={input.viewModelItemSchema},
			query={input.query}
		) {
			opal-select-option (class=opal-tree-list__selection-control, text={$item.name}, selected={$selected})
		}
	}
}