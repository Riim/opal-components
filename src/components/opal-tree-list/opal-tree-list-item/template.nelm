div/head {
	opal-button/btn-toggle-children (view-type=clean, checkable, checked={input.opened}) {
		svg/btn-toggle-children-icon (viewBox=0 0 32 18) { use (xlink:href=#opal-components__icon-chevron-down) }
	}

	span/content-wrapper {
		rt-content/content (clone)
	}
}

@if-then (if=dataTreeListItem.children) {
	div/children {
		@repeat (for=$item of dataTreeListItem.children) {
			opal-tree-list-item/item (
				data-tree-list={input.dataTreeList},
				filtered-data-tree-list={input.filteredDataTreeList},
				data-tree-list-item-value-field-name={_dataTreeListItemValueFieldName},
				data-tree-list-item-text-field-name={_dataTreeListItemTextFieldName},
				view-model={viewModel},
				view-model-item-value-field-name={_viewModelItemValueFieldName},
				view-model-item-text-field-name={_viewModelItemTextFieldName},
				indexpath='[{input.indexpath},{$index}]',
				query={input.query},
				opened={input.query},
				nesting-level={input.indexpath.length},
				has-children='{$item |has("children") }'
			) {
				rt-content (clone, get-context={_getListItemContext})
			}
		}
	}
}