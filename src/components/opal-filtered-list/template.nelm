@section/inner {

rt-content (select=.opal-filtered-list__query-input-container) {
	rt-content/query-input-container (select=.opal-filtered-list__query-input) {
		opal-text-input/query-input (
			placeholder={constructor.i18n.queryInputPlaceholder},
			clearable
		) {
			svg/query-input-control-icon (class=opal-text-input__control-icon, viewBox=0 0 32 32) {
				use (xlink:href=#opal-components__icon-search)
			}
		}
	}
}

rt-slot/list-slot (for=list)

}